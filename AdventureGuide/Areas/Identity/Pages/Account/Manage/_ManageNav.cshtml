@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column">
    <li class="nav-item"><a class="nav-link" asp-page="./Index">Profile</a></li>
    <li class="nav-item"><a class="nav-link" id="change-password" asp-page="./ChangePassword">Password</a></li>

    @if (User.Identity.IsAuthenticated)
    {
        @if (User.IsInRole("Admin"))
        {
            <li> Admin </li>

        }
        else if (User.IsInRole("User"))
        {
            <li> User </li>

        }
        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Manage" asp-action="Index"> Manage </a></li>
    }

</ul>
